<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AdminVocabularyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/type_login">
            <TextView
                android:id="@+id/txtQLTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý từ vựng"
                android:textSize="30dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="12dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnThemTuVungMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THÊM"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="#19FF00"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerVocabularyAdmin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"/>
    </LinearLayout>


</LinearLayout>