<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/type_text_login"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Old password"
            app:hintAnimationEnabled="true"
            android:textColorHint="#FF3C00"
            android:paddingLeft="5dp"
            app:passwordToggleTint="#D15714"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtMKCu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_pass"
                android:drawableTint="#D15714"
                android:background="@drawable/type_input_text"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:maxLength="15"
                android:textStyle="bold"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/type_text_login"
            android:layout_margin="20dp"
            android:hint="Password"
            app:hintAnimationEnabled="true"
            android:textColorHint="#FF3C00"
            android:paddingLeft="5dp"
            app:passwordToggleTint="#D15714"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtMKM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_pass"
                android:drawableTint="#D15714"
                android:background="@drawable/type_input_text"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:maxLength="15"
                android:textStyle="bold"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/type_text_login"
            android:hint="Confirm password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:hintAnimationEnabled="true"
            android:textColorHint="#FF3C00"
            android:paddingLeft="5dp"
            app:passwordToggleTint="#D15714"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtXNMK"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_pass"
                android:drawableTint="#D15714"
                android:background="@drawable/type_input_text"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:maxLength="15"
                android:textStyle="bold"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">
            <Button
                android:id="@+id/btnChangePass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/type_button_login"
                android:backgroundTint="#6BFF00"
                android:text="Change"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btnCancelChangePass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/type_button_login"
                android:backgroundTint="#F63333"
                android:text="Cancel"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>