<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AddQuizActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E16E37">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THÊM CÂU HỎI MỚI"
            android:textSize="22dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/type_text_login"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:hint="Make a question"
            app:hintAnimationEnabled="true"
            android:textColorHint="#D15714">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtTaoCauHoi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/type_input_text"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/tvMaBaiQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MaBai"
        android:layout_margin="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <CheckBox
            android:id="@+id/chbOptionA"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/txtOptionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer A"
            android:textSize="25dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <CheckBox
            android:id="@+id/chbOptionB"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/txtOptionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer B"
            android:textSize="25dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/txtOptionAnswer"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <CheckBox
            android:id="@+id/chbOptionC"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/txtOptionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer C"
            android:textSize="25dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <CheckBox
            android:id="@+id/chbOptionD"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/txtOptionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer D"
            android:textSize="25dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnCreateQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnXoaHet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_gravity="center"/>
</LinearLayout>