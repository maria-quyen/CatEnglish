<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/type_admin">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">
            <TextView
                android:id="@+id/txtMaBaiLesson"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/txtMaNhomLesson"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/txtTenBaiLesson"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tên bài học"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22dp"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/imgViewLesson"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_view"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/imgDelLesson"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_del"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/imgEditLesson"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_edit"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>