<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vocabulary.VocabularyActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_cat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách từ vựng"
            android:textColor="#0055ff"
            android:textSize="30dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#cc9966">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chú thích:"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="#FFFF66"
                android:text="Danh từ"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="#ff99ff"
                android:text="Tính từ"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textAllCaps="false" />
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="#99ff00"
                android:text="Động từ"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textAllCaps="false" />
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="#66ccff"
                android:text="Trạng từ"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerVocabulary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>