<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_puzzle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <ImageView
            android:id="@+id/imgHinhAnhPuzzle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_cats"/>
        <TextView
            android:id="@+id/txtTuVungPuzzle"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/txtCauHoiPuzzle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nghĩa từ vựng"
            android:textColor="#041370"
            android:textSize="22dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="#9C9C85"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <GridView
            android:id="@+id/gridTraLoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <GridView
            android:id="@+id/gridDapAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/type_button_login"
            android:backgroundTint="#EA9D59"
            android:text="skip"
            android:textStyle="bold"
            android:textSize="30dp"
            android:padding="20dp"/>
        <Button
            android:id="@+id/btnNextCautiep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_gravity=""
            android:background="@drawable/type_button_login"
            android:backgroundTint="#59EA89"
            android:text="Next"
            android:textStyle="bold"
            android:textSize="30dp"
            android:padding="20dp"/>
    </LinearLayout>
</LinearLayout>