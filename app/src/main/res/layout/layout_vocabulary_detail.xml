<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vocabulary.VocabularyDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#999966">
        <ImageView
            android:id="@+id/imgShowHinh"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_car"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtShowMaTuVung"
                android:layout_width="0dp"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtShowMaBai"
                android:layout_width="0dp"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtShowLink"
                android:layout_width="0dp"
                android:layout_height="0dp" />
            <TextView
            android:id="@+id/txtShowTuVung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Tên từ vựng"
            android:textColor="#000077"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtShowPhienAm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="/phien_am/"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/txtShowLoaiTu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Nghia"
            android:textColor="#0F712B"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtShowNghia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Nghia"
            android:textColor="#ff0000"
            android:textSize="30dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">
            <Button
                android:id="@+id/btnPhatAm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_speaker"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:textSize="10sp"
                />
            <Button
                android:id="@+id/btnPhatAmCham"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_snail"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:textSize="10sp"
                />
            <Button
                android:id="@+id/btnMicro"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_microphone"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:textSize="10sp"
                />
        </LinearLayout>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtShowViDu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Câu ví dụ"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>