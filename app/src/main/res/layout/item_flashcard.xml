<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_flashcard">
        <LinearLayout
            android:id="@+id/linearBefore"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:background="@drawable/type_flashcard"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtVocab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TÊN TỪ VỰNG"
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/txtSpelling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phiên âm"
                    android:textSize="30dp"
                    android:textColor="#EC4507"
                    android:textStyle="bold|italic"
                    android:gravity="center"
                    android:padding="10dp"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearAfter"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@drawable/type_flashcard"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/txtLink"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/txtMeaning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nghĩa"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:gravity="center"/>
    </LinearLayout>
        <Button
            android:id="@+id/btnNextFc"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NEXT"
            android:textSize="25dp"
            android:padding="15dp"
            android:textColor="#000000"
            android:background="@drawable/type_button_login"
            android:backgroundTint="#00BEF8"
            />



</LinearLayout>