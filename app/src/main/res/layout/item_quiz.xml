<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/type_login">
        <TextView
            android:id="@+id/txtMaCH"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Câu hỏi"
            android:textSize="22dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:textDirection="firstStrong"
            android:textColorHighlight="#A19765"
            android:gravity="center"
            android:layout_marginTop="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearQuestion_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtAnswer"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnOptionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option A"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="18dp"
            android:background="@drawable/type_button_login"
            android:backgroundTint="#FFC100"/>
        <Button
            android:id="@+id/btnOptionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option B"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="18dp"
            android:background="@drawable/type_button_login"
            android:backgroundTint="#FFC100"/>
        <Button
            android:id="@+id/btnOptionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option C"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="18dp"
            android:background="@drawable/type_button_login"
            android:backgroundTint="#FFC100"/>
        <Button
            android:id="@+id/btnOptionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option D"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="18dp"
            android:background="@drawable/type_button_login"
            android:backgroundTint="#FFC100"/>

        <Button
            android:id="@+id/btnNextQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:padding="18dp"
            android:background="@drawable/type_button_login"
            android:backgroundTint="#00EAFF"/>
    </LinearLayout>



</LinearLayout>